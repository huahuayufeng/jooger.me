@import '~@/assets/stylus/var/index'
@import '~@/assets/stylus/mixin/index'

.message {
  position fixed
  top 0
  right 0
  left 0
  width auto
  max-width 300px
  margin 0 auto
  text-align center
  z-index 100001
  +xxs() {
    max-width none
  }
  .wrapper {
    padding 10px 32px
    background $base-color
    color $white
    border-bottom-left-radius 4px
    border-bottom-right-radius 4px
  }
}