@import '~@/assets/stylus/var/index'
@import '~@/assets/stylus/mixin/index'

.widget-tags {
  .title {
    font-weight 700
    .icon {
      color $grey-5
      font-weight normal
    }
  }

  .tag-list {
    .tag-item {
      display inline-block
      margin 0 8px 8px 0
      padding 4px 8px
      background-color $grey
      font-size $font-size-sm
      border-radius 2px

      .icon {
        margin-right 4px
        font-size $font-size-sm
      }

      .name {
        margin-right 4px
      }

      &:hover {
        background-color $base-color
        color $white
      }
    }
  }
}