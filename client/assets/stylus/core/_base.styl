* {
  box-sizing border-box
  -webkit-tap-highlight-color rgba(0, 0, 0, 0) //  remove tap highlight color for mobile safari
}

*:before,
*:after {
  box-sizing border-box
}

html {
  -webkit-text-size-adjust 100%
}

body {
  font .875rem $font-family-base
  line-height 1.53
  color $text-color
  background $body-bg-color
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing antialiased
  text-rendering optimizeLegibility
  user-select none
  overflow-x hidden !important
  overflow-y auto

  &.dark-page {
    background $body-bg-color-dark
    color $text-color-dark
  }
}

a {
  color inherit
  background transparent
  text-decoration none
  outline none
  cursor pointer
  transition all $animation-duration-slow $ease

  &:focus {
    text-decoration none
    text-decoration-skip ink
  }

  &:active,
  &:hover {
    outline 0
    text-decoration none
  }

  &[disabled] {
    color $disabled-color
    cursor not-allowed
    pointer-events none
  }
}

scrollbar
::-webkit-scrollbar {
	width .4em
	height .4em
	background transparent
}

::-webkit-scrollbar-track {
	border-radius 0
}

::-webkit-scrollbar-thumb {
	border-radius .2em
	background-color alpha($black, .3)
}

::-webkit-scrollbar-thumb:hover {
	background-color alpha($black, .5)
}

::-webkit-input-placeholder {
  color $text-color-secondary
}

:-moz-placeholder {
  color $text-color-secondary
}

::-moz-placeholder {
  color $text-color-secondary
}

:-ms-input-placeholder {
  color $text-color-secondary
}

::selection {
  background alpha($black, .8)
  color $white
}

::webkit-selection {
  background alpha($black, .8)
  color $white
}

::moz-selection {
  background alpha($black, .8)
  color $white
}

// unify the setting of elements's margin and padding for browsers
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,textarea,p,blockquote,th,td,hr,button,article,aside,details,figcaption,figure,footer,header,hgroup,menu,nav,section {
  margin 0
  padding 0
}

ul {
  list-style none
}

// Reset fonts for relevant elements
button,input,select,textarea {
  font-family inherit
  font-size inherit
  line-height inherit
  color inherit
}

for n in 1...6 {
  h{n} {
    margin 0
    padding 0
    line-height 1.5
    // color $heading-color
    font-family $font-family-headings
    font-weight bold
    font-size (1em + (6 - n) * 0.2em)
  }
}

.link {
  position relative
  color alpha($base-color, .6)
  background linear-gradient(270deg, $base-color, $base-color, $base-color-2, $base-color-2, $base-color, $base-color)
  background-size 350% 100%
  background-position 0% 5%
  -webkit-text-fill-color transparent
  -webkit-background-clip text
  cursor pointer
  text-decoration none
  transition all .3s $ease

  &::after {
    content ''
    position: absolute
    bottom -2px
    left 0
    width 100%
    height 1px
    background linear-gradient(270deg, $base-color, $base-color, $base-color-2, $base-color-2, $base-color, $base-color)
    background-size 350% 100%
    background-position 0% 5%
    opacity .6
    transition all .3s $ease
  }
  
  &:hover
  &:active {
    animation gradient-text-bg 1.6s linear infinite reverse

    &::after {
      display block
      opacity 1
      animation gradient-text-bg 1.6s linear infinite reverse
    }
  }

  body.dark-page & {
    color $text-color-dark
    border-color $text-color-dark

    &:hover {
      font-weight bold
    }
  }
  
}

input
textarea {
  &[disabled="disabled"] {
    cursor not-allowed
  }
}

.spinner {
  width 32px
  height @width
  margin 0 auto
  border 1px solid alpha($black, .1)
  border-left-color $base-color
  border-radius 50%
  animation loading .8s infinite linear
}

[v-cloak] {
  display none
}

@keyframes wavy {
  0% {
    transform scaleY(1)
  }

  50% {
    transform scaleY(.6)
  }

  100% {
    transform scaleY(1)
  }
}

@keyframes gradient-text-bg {
  0% {
    background-position 0% 50%
  }
  100% {
    background-position 100% 50%
  }
}

@keyframes loading {
  0% {
    transform rotate(0deg)
  }

  100% {
    transform rotate(1turn)
  }
}
