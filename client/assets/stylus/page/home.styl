.page-home {
  .category-tabs {
    position relative
    border-bottom 2px solid $border-color-4

    .corner {
      position absolute
      bottom -2px
      left 0
      height 2px
      width 0
      background-color $base-color
      transition all $animation-duration-slow $ease
    }

    .tab-item {
      display inline-block
      margin-right 20px
      padding 10px 0
      color $text-color-secondary

      .icon {
        display inline-block
        margin-right 6px
        font-size 12px
      }

      .title {
        display inline-block
        font-weight bold
      }
      
      &:hover {
        color alpha($base-color, .6)
      }
      &.active {
        color $base-color
      }
    }
  }
}