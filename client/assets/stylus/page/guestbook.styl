.page-guestbook {
  .hero {
    width 100%
    height 500px
    background-size cover
    background-position center center
    background-repeat no-repeat
    background-image url('~@/static/images/guestbook.png')

    &::before {
      content ''
      full()
      background-color alpha($black, .3)
    }

    .info {
      margin-top 220px
      text-align center

      .title
      .subtitle {
        font-weight lighter
        color $white
        text-shadow 0 2px 10px $text-color
        font-family $font-family-base
      }

      .title {
        font-size 2rem
      }

      .subtitle {
        font-size 1.5rem
      }
    }
  }

  .message-widget {
    width $main-width
    margin 0 auto
    padding 20px 0 80px
  }
}