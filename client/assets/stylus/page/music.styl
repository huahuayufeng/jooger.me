.page-music {
  .music-header {
    position relative
    width 100%
    height 400px
    margin-bottom 12px
    overflow hidden
    .cover {
      full()
      width 100%
      height @width
      // background-position center center
      // background-repeat no-repeat
      // background-size cover
      // filter blur(20px)
      // z-index -1

      img {
        full()
        width 100%
        height auto
        object-fit cover
        object-position center center
      }
    }

    &:after {
      content ''
      full()
      background alpha($black, .5)
    }
  }

  .music-content {
    width $main-width
    margin 0 auto
    padding 20px 0 80px

    .music-list {
      padding 20px 30px
    }
  }
}