@import '~@/assets/style/init'

.tag {
  display inline-block
  margin 0 8px 8px 0
  padding 4px 8px
  border 1px solid var(--border-color)
  font-size $font-size-sm
  border-radius 4px
  transition()

  .icon {
    margin-right 4px
    font-size $font-size-sm
  }

  .name {
    margin-right 4px
  }

  &:hover {
    background-color var(--primary-color-light)
    border-color var(--primary-color-light)
    color var(--primary-color)
  }
}
