@import '~@/assets/style/init'

.modal {
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  z-index 999
  opacity 1

  .overlay {
    full()
    background var(--dark-color-light)
  }

  .wrapper {
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    box-shadow 0 2px 15px 0 var(--dark-color-light)
  }

  .app.mobile-layout & {
    .wrapper {
      max-width 90%
    }
  }
}
