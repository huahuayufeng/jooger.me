@import '~@/assets/style/init'

.like-btn {
    position relative
    width 100px
    height 100px
    background url(https://static.jooger.me/img/common/heart.png) no-repeat
    background-position 0 0
    overflow hidden
    animation fave-heart 1s steps(28)

    .overlay {
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        width 32px
        height @width
        cursor pointer
    }

    .text {
        position absolute
        bottom $padding-xs
        left 50%
        transform translateX(-50%)
    }

    &.liked {
        background-position -2800px 0
        transition background 1s steps(28)
    }
}

@keyframes fave-heart {
  0% {
    background-position 0 0
  }
  100% {
    background-position -2800px 0
  }
}
