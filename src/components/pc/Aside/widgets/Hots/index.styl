@import '~@/assets/style/init'

.widget-hots {
    .hot-list {
        list-style none

        .hot-item {
            display flex
            position relative
            margin-bottom $padding-md

            &:last-child {
                margin-bottom 0
            }

            .index {
                flex 0 0 20px
                display inline-block
                width 20px
                height @width
                line-height @width
                margin-right $padding-xs
                background-color var(--border-color)
                border-radius 4px
                text-align center
                font-size $font-size-sm
                font-style italic
            }

            .title {
              textOverflow()
              transition()

              &:hover {
                text-decoration underline
                transform translateX(5px)
              }
            }

            .meta {
                flexLayout(, flex-start)
                font-size $font-size-sm
                color var(--text-color-secondary)

                &-item {
                flexLayout(, flex-start)
                position relative
                margin-right 12px

                &::before {
                    content ''
                    width 2px
                    height @width
                    margin-right 4px
                    border 1px solid var(--text-color-secondary)
                    border-radius 1px
                }
                }
            }
        }
    }
}
