@import '~@/assets/style/init'

.widget-categories {
  .category-list {
    .category {
      flexLayout(, flex-start)
      margin 4px -4px
      padding $padding-xs
      cursor pointer

      &:last-child {
        margin-bottom 0
      }

      .name {
        flex 1 0
        margin-left $padding-sm
      }

      .count {
        font-size $font-size-sm
        color var(--text-color-secondary)
      }

      &:hover {
        background-color var(--button-color-hover)
        border-radius 4px
      }
    }
  }
}
