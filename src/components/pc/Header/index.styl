@import '~@/assets/style/init'

.header {
  position fixed
  width 100%
  height 60px
  background-color $white
  z-index 99

  .wrapper {
    flexLayout(, flex-start)
    display flex
    max-width 1088px
    height 100%
    margin 0 auto
  }

  .logo {
    flexLayout(, flex-start)
    font-family $font-family-logo
    text-decoration none

    img {
      height 18px
    }

    &-text {
      display inline-block
      margin-left $padding-xs
      font-size 28px
      color $text-color
    }
  }

  .menus {
    flex 1 0
    position relative
    margin-left $padding-md
    padding 0 $padding-sm

    .menu-item {
      display inline-block
      padding 18px 24px
      line-height 22px
      color $text-color

      &:hover {
        color $base-color
      }

      &.active {
        color $base-color
        font-weight 700
      }
    }
  }

  .search {
    display flex
    width 250px
    height 36px
    background-color $grey
    border-radius 2px

    input {
      flex 1 0
      height 100%
      padding 8px 16px
      border 0
      outline 0
      background none
    }

    &-btn {
      flex 0 0 36px
      margin 8px 0
      line-height 20px
      text-align center
      color $text-color-secondary
      border-left 1px solid $border-color
      cursor pointer
      transition(color,,$ease)

      &:hover {
        color $text-color
      }
    }
  }
}
