@import '~@/assets/style/init'

.app-header {
  width 100%
  height 60px
  background-color $white

  .wrap {
    display flex
    justify-content space-between
    align-items center
    max-width 1088px
    height 100%
    margin 0 auto
  }

  .logo {
    display flex
    justify-content flex-start
    font-family Oleo Script
    text-decoration none

    img {
      height 40px
    }

    &-text {
      display inline-block
      margin-left 16px
      font-size 28px
      color $text-color
    }
  }

  .search {
    display flex
    width 250px
    height 36px
    background-color $grey
    border-radius 4px

    input {
      flex 1 0
      height 100%
      padding 8px 16px
      border 0
      outline 0
      background none
    }

    &-btn {
      flex 0 0 36px
      margin 8px 0
      line-height 20px
      text-align center
      color $text-color-secondary
      border-left 1px solid $border-color
      cursor pointer
      transition color $animation-duration-base $ease

      &:hover {
        color $text-color
      }
    }
  }
}
